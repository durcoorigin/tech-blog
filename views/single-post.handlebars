<article class="post">
    <div class="title">
        <h3>{{title}}</h3>
        <p>{{post_content}}</p>
    </div>
  <div class="meta">
    Posted by <strong>{{user.username}}</strong> on
    {{post.created_at}}
    |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>