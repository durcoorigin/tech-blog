{{!-- Display post --}}
{{> post-info post}}

{{!-- Add comment form --}}
{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
  </div>
</form>
{{/if}}

{{!-- Display comments --}}
<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      Comment by {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}